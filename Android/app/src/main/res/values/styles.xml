<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/mp_blue</item>
        <item name="colorButtonNormal">@color/mp_blue_disabled</item>
    </style>

    <style name="AppTheme.TranslucentStatus" parent ="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.CustomToolbar" parent="AppTheme">
       <item name="android:statusBarColor">@color/mp_blue</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>



    <style name="AppTheme.SignUpLauncher" parent ="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorButtonNormal">@color/mp_blue</item>
        <item name="colorAccent">@color/mp_blue</item>

    </style>


    <style name="FittingProgresCircle" parent="Theme.AppCompat.Light">
        <item name="cpb_background_progressbar_color">@color/mp_lightgrey</item>
        <item name="cpb_background_progressbar_width">5dp</item>
        <item name="cpb_progressbar_color">@android:color/darker_gray</item>
        <item name="cpb_progressbar_width">5dp</item>
    </style>


</resources>
